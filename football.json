{
  "apps": [
    {
      "name": "web-server",
      "script": "server/server.js",
      "args": [
        "--color"
      ],
      "kill_timeout": 15000,
      "watch": [
        "server"
      ],
      "ignore_watch": ["server\/db-init\/football.db*"],
      "watch_options": {
        "followSymlinks": false
      },
      "min_uptime": "30s",
      "max_restarts": 5,
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "env": {
        "DEBUG_COLORS": true,
        "FOOTBALL_EMAIL": "yes",
        "FOOTBALL_LOGNODATE": "yes"
      }
    }
  ]
}